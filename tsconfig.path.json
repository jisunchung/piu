{
  "compilerOptions": {
    /* Path Mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@shared/*": ["src/components/shared/*"],
      "@styles/*": ["src/styles/*"],
      "@pages/*": ["src/pages/*"],
      "@remote/*": ["src/remote/*"],
      "@models/*": ["src/models/*"],
      "@utils/*": ["src/utils/*"],
      "@hooks/*": ["src/hooks/*"],
      "@store/*": ["src/store/*"],
      "@constants": ["src/constants/index"],
      "@constants/*": ["src/constants/*"]
    }
  }
}
